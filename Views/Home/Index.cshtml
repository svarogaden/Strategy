<body>
    @if (User.Identity.IsAuthenticated)
    {
        @*<p>@User.Identity.Name</p>*@

        <div class="hamburger-menu">
            <input id="menu__toggle" type="checkbox" />
            <label class="menu__btn" for="menu__toggle">
                <span></span>
            </label>
            <ul class="menu__box">


                @if (User.IsInRole("admin"))
                {

                    <li><a class="menu__item" href="~/Profile/Members/">Пользователи</a></li>
                    <li><a class="menu__item" href="~/Roles/Index/">Роли</a></li>
                    <li><a class="menu__item" href="~/Manager/StopServer/">Остановить сервер</a></li>

                }



                <li><a class="menu__item" href="~/">Играть</a></li>
                <li><a class="menu__item" href="~/ChatGroup/Index/">Сообщества</a></li>
                <li><a class="menu__item" href="~/Profile">Мой профиль</a></li>
                <li><a class="menu__item" id="FullScreen" href="#">Полный экран</a></li>

                <li><a class="menu__item" href="#">Блог</a></li>
                <li><a class="menu__item" href="#">Контакты</a></li>

                <li>


                    <form method="post" asp-controller="Account" asp-action="Logout">
                        <input type="submit" class="btn btn-primary" value=" Выход " />
                    </form>


                </li>

            </ul>
        </div>
    }



    @*<div id="currentTarget">Расстояние до цели:173 м</div>*@






    <div id="resourceTable">
        <div class="column"><img src="~/images/display/Metall.png" width="25" height="25" /></div>
