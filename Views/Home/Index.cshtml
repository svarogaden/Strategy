        <div class="column">4000</div>
    </div>





    <div id="Controls"></div>
    <div id="InfoPanel"></div>






    <div id="currentPlanet">Планета</div>

    <div id="loading"></div>
    <canvas id="canvas"></canvas>

    <script type="text/javascript">
        document.oncontextmenu = () => { return false };
    </script>









   


     




